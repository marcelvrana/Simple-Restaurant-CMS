{block headTitle}News{/block}
{block title}News{/block}

{block buttonContent}
    <div class="btn-toolbar mb-2 mb-md-0">
        <a n:href="add" class="btn btn-sm btn-secondary">Add</a>
    </div>
{/block}

{block content}
    <div class="table-responsive">
        {snippet tablesnippet}
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Created</th>
                    <th>Show from</th>
                    <th>Show to</th>
                    <th></th>
                </tr>
                </thead>

                <tbody>
                <tr n:foreach="$items as $item" class="item" >
                    <td>
                        {$item|dictionaryData:'news':'name'}
                    </td>
                    <td>{$item->created|date:'d.m.Y H:i:s'}</td>
                    <td>{$item->showfrom|date:'d.m.Y'}</td>
                    <td>{$item->showto|date:'d.m.Y'}</td>

                    <td align="right">
                        <div class="btn-group">
                            <a n:href="edit $item->id" class="btn btn-sm btn-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit"><i class="bi bi-tools"></i></a>
                            <button data-confirm="swal" data-title="Delete {$item|dictionaryData:'news':'name'}?" data-text="The change is irreversible!" data-type="warning" data-url="{link delete!, $item->id}" class="btn btn-sm btn-danger ajax" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete"><i class="bi bi-trash"></i></button>
                        </div>
                    </td>
                </tr>

                </tbody>

            </table>
        {/snippet}
    </div>
{/block}